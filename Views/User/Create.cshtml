@model Expense_Tracker.Models.User

<div class="glass-container d-flex justify-content-center align-items-center ">
    <div class="expense-form-container">
        <div class="expense-header" style="margin-left:0">
            Add new user
        </div>
        <div class=" mt-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label text-white mb-2"></label>
                        <input asp-for="Username" class="form-control " style="border-radius:12px;border-width:0px;padding:10px" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label text-white mb-2"></label>
                        <input asp-for="Password" class="form-control" style="border-radius:12px;border-width:0px;padding:10px" />
                        <span asp-validation-for="Password" class="text-danger "></span>
                    </div>
                    <div class="form-group d-inline-flex mt-5 mb-3">
                        <input type="submit" value="Save" class="add-btn" style="margin-left:0px;" />
                        <button class="dropbtn " style="margin-left:15px">
                            <a asp-action="Index" class="button-link">Back to List</a>
                        </button>
                    </div>
                </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
